Capslock & g::
    keywait,g
    keywait, g, d ,t 0.2
    if errorlevel 
        Sendinput, {Home}+{End}^c
    else
        Sendinput, {Home}+{End}{del}
return

Capslock & c::
    keywait,c
    keywait, c, d ,t 0.1
    if errorlevel 
        Sendinput, ^a^c
    else
        Sendinput, ^a{del}
return

;----------------------------

Capslock & a::
    keywait, a
    keywait, a, d ,t 0.2
    if errorlevel
    {
        SendInput ^s ; save
    }
    else
    {
        IfWinActive, ahk_class XLMAIN
        {
            SendInput {f12} ; save as in excel
            return
        }
        SendInput ^+s ; save as
    }
return

