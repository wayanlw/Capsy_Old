#UseHook 

MouseDelay = 0 
Increment = 1 

; p:: 
; l:: 
; SC027::
; '::  
; Ralt::

e::
s::
d:: 
f::
RShift::

    xVal=
    yVal= 
    If GetKeyState("RShift","p") = 1
    { 
        IncrementValue := Increment 
        Loop, 
        { 
            ; lower increment value higher startup speed. Lower increment slower acceleration
            If (A_Index > IncrementValue * 6) and (IncrementValue < Increment * 15 ) 
                IncrementValue := IncrementValue * 2 
            If GetKeyState("d", "P") 
                yVal := IncrementValue 
            Else If GetKeyState("e", "P") 
                yVal := -IncrementValue 
            If !yVal 
                yVal := 0 

            If GetKeyState("s", "P") 
                xVal := -IncrementValue 
            Else If GetKeyState("f", "P") 
                xVal := IncrementValue 
            If !xVal 
                xVal := 0 
            If GetKeyState(A_ThisHotKey, "P") 
                MouseMove, %xVal%, %yVal%,%MouseDelay%,R 
            Else 
                Break 
        }
        send {RShift up}
    } 
    Else 
    Send % "{" . A_ThisHotKey . "}" 
Send, {RShift up}
return 

#If GetKeyState("RShift","P") = 1

    c:: Send {RButton}
    v:: MouseClick , left, , , 2
    Insert:: Send {MButton}
    ':: senDinput ^{LButton}

    space::
        SENDINPUT {LBUTTON DOWN}
        keywait, space, u 
        SENDINPUT {LButton UP}
    Return

    ; v:: 
    ;     SENDINPUT {LBUTTON DOWN}
    ;     keywait, space, u 
    ;     SENDINPUT {LButton UP}
    ; Return

    
    r::
        While GetKeyState("r", "P")
        {
            Send {Wheelup}
            sleep 100
        }
    return

    w::
        While GetKeyState("w", "P")
        {
            Send {WheelDown}
            sleep 100
        }
    return

